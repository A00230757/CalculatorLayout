<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <!--  colorPrimary changed from @color/purple_200 to #F4F6F6   below is shining gray color for colorPrimary-->
        <item name="colorPrimary">#F4F6F6</item>

        <!--        colorOnSecondary changed from @color/purple_700 to #5D6D7E indian red-->
        <item name="colorPrimaryVariant">#5D6D7E</item>

        <!--        colorOnPrimary changed from @color/black to #FFFFFF light orange-->
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>

        <item name="colorSecondaryVariant">@color/teal_200</item>

        <!--        colorOnSecondary changed from @color/black to #FFFFFF light orange-->
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--this theme also including others is included in manifest file for background color of action(title) bar color-->
        <item name="android:background">#5D6D7E</item>
    </style>

    <!--    this style(ButtonStyle_number) is used to change buttons(numbers) text color , textstyle , textsize-->
    <style name="ButtonStyle_number" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!--    this style(ButtonStyle_operator1) is used to change buttons(operators) text color , textstyle , textsize-->
    <style name="ButtonStyle_operator1" parent="@android:style/Widget.Button">
        <item name="android:textColor">#1E8449</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
    <!--    this style(ButtonStyle_other) is used to change buttons(CE,C,DEL) text color , textstyle , textsize-->
    <style name="ButtonStyle_other" parent="@android:style/Widget.Button">
        <item name="android:textColor">#ff6347</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!--    this style(TextviewStyle) is used to change textview(result)  color , style , size , margin bottom , layout gravity-->
    <style name="TextviewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#86AD33</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <!--    this style(LinearLayoutStyle) is used for margin of main linear layout from device screen.-->
    <style name="LinearLayoutStyle" >
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>